<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="0dp" android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="시작" android:id="@+id/btnStart"/>
        <Button
            android:layout_width="0dp" android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="이전" android:id="@+id/btnBack"/>
        <Button
            android:layout_width="0dp" android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="다음" android:id="@+id/btnNext"/>
        <Button
            android:layout_width="0dp" android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="정지" android:id="@+id/btnStop"/>
    </LinearLayout>
    <ViewFlipper
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/viewFlip">
        <ImageView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/img0"
            android:src="@drawable/jellybean"/>
        <ImageView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/img1"
            android:src="@drawable/kitkat"/>
        <ImageView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/img2"
            android:src="@drawable/lollipop"/>
        <ImageView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/img3"
            android:src="@drawable/marshmallow"/>
        <ImageView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/img4"
            android:src="@drawable/nougat"/>
    </ViewFlipper>

</LinearLayout>