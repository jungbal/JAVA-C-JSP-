<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="*"
    tools:context=".MainActivity">
    <TableRow android:layout_marginBottom="20dp">
        <EditText android:id="@+id/edt1"
            android:inputType="numberDecimal"
            android:text="0" android:layout_span="5"/>
    </TableRow>
    <EditText android:id="@+id/edt2" android:layout_marginBottom="20dp"
        android:inputType="numberDecimal"
        android:text="0"/>
    <TableRow  android:layout_marginBottom="20dp">
        <Button android:id="@+id/btnNum0"
            android:layout_width="0dp" android:layout_weight="1"
            android:layout_marginLeft="5dp" android:text="0"/>
        <Button android:id="@+id/btnNum1"
            android:layout_width="0dp" android:layout_weight="1"
            android:layout_marginLeft="5dp" android:text="1"/>
        <Button android:id="@+id/btnNum2"
            android:layout_width="0dp" android:layout_weight="1"
            android:layout_marginLeft="5dp" android:text="2"/>
        <Button android:id="@+id/btnNum3"
            android:layout_width="0dp" android:layout_weight="1"
            android:layout_marginLeft="5dp" android:text="3"/>
        <Button android:id="@+id/btnNum4"   android:text="4" android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp" android:layout_width="0dp" android:layout_weight="1"/>
    </TableRow>
    <TableRow android:layout_marginBottom="20dp">
        <Button android:id="@+id/btnNum5"
            android:layout_width="0dp" android:layout_weight="1"
            android:layout_marginLeft="5dp" android:text="5"/>
        <Button android:id="@+id/btnNum6"
            android:layout_width="0dp" android:layout_weight="1"
            android:layout_marginLeft="5dp" android:text="6"/>
        <Button android:id="@+id/btnNum7"
            android:layout_width="0dp" android:layout_weight="1"
            android:layout_marginLeft="5dp" android:text="7"/>
        <Button android:id="@+id/btnNum8"
            android:layout_width="0dp" android:layout_weight="1"
            android:layout_marginLeft="5dp" android:text="8"/>
        <Button android:id="@+id/btnNum9"   android:layout_marginLeft="5dp" android:layout_marginRight="5dp"
            android:text="9" android:layout_width="0dp" android:layout_weight="1"/>
    </TableRow>
    <Button android:id="@+id/btnAdd" android:text="더하기"
        android:layout_marginBottom="20dp" android:onClick="btnClick"/>
    <Button android:id="@+id/btnSub" android:text="빼기"
        android:layout_marginBottom="20dp" android:onClick="btnClick"/>
    <Button android:id="@+id/btnMul" android:text="곱하기"
        android:layout_marginBottom="20dp" android:onClick="btnClick"/>
    <Button android:id="@+id/btnDiv" android:text="나누기"
        android:layout_marginBottom="20dp" android:onClick="btnClick"/>
    <TextView android:id="@+id/txtResult" android:text="계산결과:"
        android:textColor="#ff0000" android:textSize="25dp"/>
</TableLayout>